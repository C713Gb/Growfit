<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity1"
    android:background="#1995ad">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical">
   <com.google.android.exoplayer2.ui.SimpleExoPlayerView
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:id="@+id/videoview"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:inputType="textPersonName"
       android:textColor="#f1f1f2"
       android:gravity="right"
       android:layout_gravity="center"
       android:layout_marginTop="10dp"
       android:textSize="12sp"
       android:textStyle="bold"
       android:fontFamily="casual"
       android:text="Video Name"
       android:id="@+id/videousersingle"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:inputType="textPersonName"
       android:textColor="#bcbabe"
      android:textSize="18sp"
      android:textStyle="bold"
      android:fontFamily="casual"
      android:text="Video Name"
      android:id="@+id/videonamesingle"
       android:layout_marginTop="10dp"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:inputType="textMultiLine"
       android:textColor="#bcbabe"
       android:layout_marginTop="10dp"
       android:textSize="18sp"
       android:textStyle="bold"
       android:fontFamily="casual"
       android:text="Short description of video"
       android:id="@+id/videodescrisingle"/>
</LinearLayout>
</ScrollView>