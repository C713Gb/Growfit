<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterEmail">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grow.fit"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/user_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/title_text"/>

    <EditText
        android:id="@+id/user_txt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_heading"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittxt_draw"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hint="John Snow"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/email_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_below="@+id/user_txt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/email_txt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_heading"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittxt_draw"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hint="abc@gmail.com"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/pwd_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_below="@+id/email_txt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/pwd_txt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd_heading"
        android:inputType="textPassword"
        android:background="@drawable/edittxt_draw"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hint="*******"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/next_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd_txt"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/next_btn"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>